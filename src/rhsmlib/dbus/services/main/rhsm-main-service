#!/usr/bin/env python
import dbus
import sys
import optparse

from subscription_manager import logutil
logutil.init_logger()

import rhsmlib.dbus as common

from rhsmlib import import_class
from rhsmlib.dbus.services import base_server
from rhsmlib.dbus.services.main import MainService


def main(args):
    bus_class = dbus.SystemBus
    bus_name = common.SERVICE_NAME

    if len(args) > 0:
        bus_class = import_class(args[0])

    if len(args) > 1:
        bus_name = args[1]

    service_classes = [MainService]

    base_server.run_services(bus_class=bus_class,
        bus_name=bus_name,
        service_classes=service_classes)
    return 0

if __name__ == "__main__":
    parser = optparse.OptionParser()
    (options, args) = parser.parse_args()
    sys.exit(main(args))
